{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@rainbow-me/hooks": ["hooks"],
      "@rainbow-me/routes": ["navigation/routesNames"],
      "@rainbow-me/styles": ["styles"],
      "@rainbow-me/utils": ["utils"],
      "logger": ["utils/logger"],
      "react-native-cool-modals": ["react-native-cool-modals"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
}