+// MARK: - BlurViewAppStateObserver.swift
+
+import UIKit
+
+final class BlurViewAppStateObserver {
+  
+  static let shared = BlurViewAppStateObserver()
+  
+  private let blurViews = NSHashTable<BaseBlurView>.weakObjects()
+  private let notificationCenter: NotificationCenter
+  private var didBecomeActiveObserver: NSObjectProtocol?
+  
+  private init(notificationCenter: NotificationCenter = .default) {
+    self.notificationCenter = notificationCenter
+    didBecomeActiveObserver = notificationCenter.addObserver(
+      forName: UIApplication.didBecomeActiveNotification,
+      object: nil,
+      queue: .main
+    ) { [weak self] _ in
+      self?.refreshBlurViews()
+    }
+  }
+  
+  deinit {
+    if let didBecomeActiveObserver {
+      notificationCenter.removeObserver(didBecomeActiveObserver)
+    }
+  }
+  
+  func register(_ view: BaseBlurView) {
+    blurViews.add(view)
+  }
+  
+  func unregister(_ view: BaseBlurView) {
+    blurViews.remove(view)
+  }
+  
+  private func refreshBlurViews() {
+    for view in blurViews.allObjects {
+      view.refreshView(true)
+    }
+  }
+}
